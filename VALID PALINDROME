bool isPalindrome(char* s) {

    int left = 0;
    int right = strlen(s) - 1;

    while (left < right) {

        // Skip non-alphanumeric on the left
        if (!isalnum(s[left])) {
            left++;
            continue;
        }

        // Skip non-alphanumeric on the right
        if (!isalnum(s[right])) {
            right--;
            continue;
        }

        // Compare after converting to lowercase
        if (tolower(s[left]) != tolower(s[right])) {
            return false;
        }

        left++;
        right--;
    }

    return true;
}
